@model OnlineExam.Models.ViewModels.QuestionVM
@{
    ViewData["Title"] = "Create";
}

<div asp-validation-summary="All"></div>
<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h1>Create Question</h1>
            </div>
        </div>
    </div>
    <div>
        <label asp-for="question.question">Question</label>
        <textarea asp-for="question.question" rows="4" class="form-control" ></textarea>
        <span asp-validation-for="question.question" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="question.IsActive"></label>
        <input type="checkbox" asp-for="question.IsActive" />
    </div>
    <div>
        <label asp-for="question.SubjectId">Choose Subject For this Question</label>
        <select asp-for="question.SubjectId" asp-items="@Model.subjectList" class="form-select">
            <option disabled selected>--Select Subject</option>
        </select>
        <span asp-validation-for="question.SubjectId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="Question" asp-action="Index" class="btn btn-secondary">Go Back</a>
</form>


@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}
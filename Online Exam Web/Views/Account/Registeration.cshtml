                    }
                </div>*@
                <div class="row">
                    <div class="col-10">

                    </div>
                    <div class="col-3">
                        <div class="form-group">
                            <input type="submit" class="btn btn-block btn-primary mb-2" value="Creare User" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

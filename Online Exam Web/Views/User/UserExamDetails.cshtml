@model List<UserSubject>
@{
	ViewData["Title"] = "UserExamDetails";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UserExamDetails</h1>

<div class="container">
	<div class="row">
		<div class="col-6">
			<h1>Available Exam results</h1>
		</div>
	</div>
</div>

<table>
	<thead>
		<tr>
			<th width="20%">
				Subject Name
			</th>
			<th width="20%">
				Functional
			</th>
			<th width="20%">

			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var a in Model)
		{
			<tr>
				<td>
					@a.Subject.Subject_Name
				</td>
				<td>
					@a.Subject.IsActive
				</td>
				<td>
					@{
						var param  = new Dictionary<string, string>
						{
							{a.User.Name,a.UserId},
							{@a.Subject.Subject_Name,@a.SubjectId}
						}
					};
					<a asp-controller="Exam" asp-action="AttemptWIthApi" asp-all-route-data="param" class="btn btn-primary">AttemptWIthApi</a>
				</td>
			</tr>
		}

	</tbody>

	<script src="~/js/Exam.js"></script>

</table>



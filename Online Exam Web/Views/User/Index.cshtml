@model List<User>
@{
	ViewData["Title"] = "Index";
}

<div class="container">
	<div class="row">
		<div class="col-6">
			<h1>Users Index</h1>
			<ul>
				<li>
					<p></p>
				</li>
			</ul>
		</div>
	</div>
</div>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Name Or Email: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-action="Index" class="btn btn-secondary" >Back to Full List</a>
        </p>
    </div>
</form>
<table>
	<thead>
		<tr>
			<th width="20%">
				Name
			</th>
			<th width="20%">
				Email
			</th>
			<th width="20%">
				Functional
			</th>
			<th width="20%">
				Oprations
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var a in Model)
		{
			<tr>
				<td>
					@a.Name
				</td>
				<td>
					@a.Email
				</td>
				<td>
					@a.IsActive
				</td>
				<td>
					<a asp-controller="User" asp-action="Edit" asp-route-id="@a.Id" class="btn btn-primary">Edit</a>
					<a asp-controller="User" asp-action="UserExamDetails" asp-route-id="@a.Id" class="btn btn-info">Users Exam details</a>
				</td>
			</tr>
		}
	</tbody>

</table>
